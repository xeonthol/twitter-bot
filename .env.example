# ===================================================
# TWITTER BOT CONFIGURATION - EXAMPLE
# Copy this file to .env and fill in your values
# ===================================================

# ============ LOGIN METHOD ============
# Recommended: Use cookies (safer than password)
USE_COOKIES=true
TWITTER_COOKIES=auth_token=YOUR_AUTH_TOKEN_HERE; ct0=YOUR_CT0_HERE; kdt=YOUR_KDT_HERE; twid=YOUR_TWID_HERE

# Alternative: Username/Password (not recommended)
# USE_COOKIES=false
# TWITTER_USERNAME=your_username
# TWITTER_PASSWORD=your_password

# ============ BOT ACTIONS ============
AUTO_LIKE=true
AUTO_RETWEET=true
AUTO_COMMENT=true
AUTO_FOLLOW=true

# ============ TARGETS ============
# Comma-separated tweet URLs
TARGET_TWEETS=https://twitter.com/username/status/1234567890,https://twitter.com/username/status/0987654321

# Comma-separated usernames (without @)
TARGET_USERS=elonmusk,OpenAI,github

# ============ COMMENTS POOL ============
# Random comments (comma-separated)
COMMENTS=Great post!,Thanks for sharing!,Very informative!,Love this!,Awesome content!,Well said!,Interesting perspective!,100% agree!

# ============ BEHAVIOR SETTINGS ============
# Run browser in headless mode (true = invisible, false = visible for debugging)
HEADLESS=true

# Delays between actions (milliseconds) - makes bot look more human
DELAY_MIN=3000
DELAY_MAX=7000

# ============ SCHEDULING ============
# Enable scheduled runs
ENABLE_SCHEDULER=false

# Cron expression (default: every 6 hours)
# Format: minute hour day month weekday
# Examples:
#   0 */6 * * *   = Every 6 hours
#   0 9,15,21 * * * = At 9am, 3pm, 9pm
#   */30 * * * *  = Every 30 minutes
SCHEDULE_CRON=0 */6 * * *

# ============ LOGGING ============
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log to file
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/bot.log

# ============ PROXY (Optional) ============
# Use proxy for requests
USE_PROXY=false
PROXY_URL=http://username:password@proxy.com:8080

# ============ SAFETY ============
# Maximum actions per run
MAX_LIKES_PER_RUN=10
MAX_RETWEETS_PER_RUN=10
MAX_COMMENTS_PER_RUN=5
MAX_FOLLOWS_PER_RUN=5

# Stop on error
STOP_ON_ERROR=false

# ===================================================
# HOW TO GET TWITTER COOKIES:
# ===================================================
# 1. Login to Twitter in your browser
# 2. Press F12 to open DevTools
# 3. Go to "Application" tab (Chrome) or "Storage" (Firefox)
# 4. Click "Cookies" → "https://twitter.com"
# 5. Find and copy these 4 values:
#    - auth_token
#    - ct0
#    - kdt
#    - twid
# 6. Format as: auth_token=VALUE; ct0=VALUE; kdt=VALUE; twid=VALUE
#
# ⚠️  Cookies expire! Update if login fails.
# ===================================================